{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Privacy Suite",
  "version": "0.1.0",
  "identifier": "com.dulprivacy.suite",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:3030 http://127.0.0.1:3030; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'",
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    },
    "windows": [
      {
        "title": "Privacy Suite",
        "width": 480,
        "height": 720,
        "resizable": false,
        "decorations": true,
        "transparent": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "privacy_suite.exe",
      "Start Privacy Suite.bat"
    ]
  }
}
